{% extends 'eshop/admin/base.html.twig' %}
{% block title %}List of promos {% endblock %}
    {% block title_link %} 
    <small> 
        <a href="{{path('eshop_admin_promo_new')}}">Add new</a> 
    </small>
{% endblock %}  
{% block body %} 

   <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Titre</th>
                <th>Valeur</th>
                <th>Date DÃ©but</th>
                <th>Date Fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promo in  promos %}
            <tr>
                <td><a href="{{ path('eshop_admin_promo_index', { 'id': promo.id }) }}">{{ promo.id }}</a></td>
           
                <td>{{ promo.code }}</td>
                  <td>{{ promo.valeur }}</td>
                <td>{{ promo.titre | raw }}</td>
                <td>{% if promo.dated %}{{ promo.dated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if promo.datef %}{{ promo.datef|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                   
                            <a href="{{ path('eshop_admin_promo_edit', { 'id': promo.id }) }}" class="glyphicon glyphicon-pencil"></a>
                        
                            <a href="{{ path('eshop_admin_promo_delete', { 'id': promo.id }) }}" class="glyphicon glyphicon-remove-circle remove-item"></a>
                   
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('eshop_admin_promo_new') }}">Create a new promo</a>
        </li>
    </ul>
{% endblock %}
