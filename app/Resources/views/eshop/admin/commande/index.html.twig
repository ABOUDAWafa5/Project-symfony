{% extends 'eshop/admin/base.html.twig' %}
{% block title %}List of Orders {% endblock %}
  
{% block body %} 
<table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Paiement</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td><a href="{{ path('eshop_admin_order_show', { 'id': commande.id }) }}">{{ commande.id }}</a></td>
                <td>{{ commande.name }}</td>
                <td>{{ commande.email }}</td>
                <td>{{ commande.address }}</td>
                <td>{{ commande.paiement }}</td>
                <td>{% if commande.date %}{{ commande.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
              
                            <a href="{{ path('eshop_admin_order_show', { 'id': commande.id }) }}" class="glyphicon glyphicon-print"></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
